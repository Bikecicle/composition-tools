package grain;

public class SampleGrain extends Grain {

	private static final long serialVersionUID = 9101116127464104179L;

	public float att;
	public float dec;
	public float fRto;
	public float sStrt;
	public float sEnd;
	public int fID;

	public SampleGrain(float strt, float dur, float amp, float att, float dec, float fRto, float sStrt, float sEnd,
			int fID) {
		super(Instrument.sample.id, strt, dur, amp);
		this.att = att;
		this.dec = dec;
		this.fRto = fRto;
		this.sStrt = sStrt;
		this.sEnd = sEnd;
	}

	public String statement() {
		float k_sStrt;
		float k_sEnd;
		return "i" + iID + " " + strt + " " + dur + " " + amp + " " + att + " " + dec;
	}

}
