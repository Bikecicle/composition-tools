package grain;

public class SampleGrain extends Grain {
	
	private static final long serialVersionUID = 408999198227451403L;
	
	public static final float DEFAULT_ATT = 0.001f;
	public static final float DEFAULT_DEC = 0.001f;
	
	public float att;
	public float dec;

	public SampleGrain(float strt, float dur, float amp, float att, float dec) {
		super(Instrument.sample.id, strt, dur, amp);
		this.att = att;
		this.dec = dec;
	}
	
	public String statement() {
		return "i" + iID + " " + strt + " " + dur + " " + amp + " " + att + " " + dec;
	}

}
