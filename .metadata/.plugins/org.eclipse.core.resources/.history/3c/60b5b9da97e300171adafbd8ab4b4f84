sr = 44100
ksmps = 32
nchnls = 2
0dbfs = 1.0

instr 1; 

	; p4=amp
	; p5=freq
	; p6=attack time
	; p7=release time
	ares linen  p4, p6, p3, p7 
	asig poscil ares, p5, 1    
		outs asig, asig  
	
endin

instr 2

	; p4=amplitude
	; p5=attack time
	; p6=decay time
	; p7=pitch ratio
	; p8=start time (samples)
	; p9=end time (samples)
	; p10=ftable #
	ares linen p4, p5, p3, p6
	asig lposcil ares, p7, p8, p9, p10
     	outs asig, asig
     
endin